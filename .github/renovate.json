{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>re-taro/renovate-config"
  ],
  "npm": {
    "packageRules": [
      {
        "groupName": "remix-run",
        "semanticCommitType": "fix",
        "matchPackageNames": [
          "/@remix-run/*/"
        ]
      },
      {
        "groupName": "playwright",
        "semanticCommitType": "fix",
        "matchPackageNames": [
          "/@playwright/*/",
          "/playwright/"
        ]
      },
      {
        "groupName": "storybook",
        "semanticCommitType": "fix",
        "matchPackageNames": [
          "/@storybook/*/",
          "/storybook/"
        ]
      }
    ]
  }
}
